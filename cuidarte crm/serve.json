{
    "rewrites": [
        {
            "source": "**",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "**/*.@(js|css|png|jpg|jpeg|gif|svg|ico)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "max-age=0, must-revalidate"
                }
            ]
        },
        {
            "source": "**",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                }
            ]
        }
    ]
}